rules_version = '2';
// Deploy these rules: firebase deploy --only firestore:rules
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: authenticated users can create their own doc (on registration)
    // and read/update their own doc only
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Courses: anyone signed in can read and write (admin write enforced in app)
    match /courses/{courseId} {
      allow read, write: if request.auth != null;
    }

    // Applications: any signed-in user can create/read/update/delete
    // (students submit; admins read/update status; enforced in app by role)
    match /applications/{applicationId} {
      allow read, write: if request.auth != null;
    }
  }
}
